# Required API Keys
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Optional: Customize ElevenLabs voice
ELEVENLABS_VOICE_ID=2ajXGJNYBR0iNHpS4VZb  # Default: Rob

# User personalization (customize Halfred's knowledge about you)
USER_NAME=Your Name
USER_CONTEXT=your occupation, interests, hobbies, etc.

# Push-to-Talk Configuration
PTT_ENABLED=false  # true = push-to-talk mode, false = continuous listening
PTT_KEY=cmd_alt_ctrl    # Keys to hold: cmd_alt_ctrl (macOS), space, ctrl, shift, alt, or any letter
PTT_INTERRUPTS_SPEECH=true  # Whether PTT interrupts HALfred's speech

# MCP Server Settings
MCP_CLIENT_TIMEOUT_SECONDS=30  # Timeout for MCP tool calls
# MCP_DEMO_FILESYSTEM_DIR=/path/to/demo/dir  # Optional: Enable demo filesystem MCP

# PTY Terminal Safety
PTY_REQUIRE_APPROVAL=true  # Require confirmation for risky shell commands

# Desktop Automation (macOS only)
ENABLE_MACOS_AUTOMATOR_MCP=false  # Enable AppleScript/JXA automation
ENABLE_FEEDBACK_LOOP_MCP=false    # Enable visual confirmation overlays
PREFERRED_DISPLAY_INDEX=0         # For dual monitors: 0=primary, 1=secondary
AUTOMATION_REQUIRE_APPROVAL=true  # Require confirmation for state-changing actions

# Screenshot Settings
SCREENSHOTS_DIR=screenshots  # Directory for saved screenshots

# OpenAI Agents SDK Settings
OPENAI_AGENTS_DISABLE_TRACING=1  # Set to 1 to disable telemetry (prevents 503 errors)

# Developer Mode
DEV_MODE=false  # Enable debug commands (/screeninfo, /screenshot, etc.)

# Supervisor Agent Settings
SUPERVISOR_MODEL=gpt-4.1  # Model for Supervisor agent (handles complex tasks)
# SUPERVISOR_VECTOR_STORE_ID=vs_xxx  # Optional: Vector store ID for file_search