# Required API Keys
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Optional: Customize voice (Currently: Rob)
ELEVENLABS_VOICE_ID=2ajXGJNYBR0iNHpS4VZb

# User personalization (customize Halfred's knowledge about you)
USER_NAME=Your Name
USER_CONTEXT=your occupation, interests, hobbies, etc.

# Push-to-Talk Configuration
# Set to true to start in push-to-talk mode, false to start in continuous listening mode
# You can always toggle between modes with /ptt or /mic commands during the session
PTT_ENABLED=false
# Keys to hold for push-to-talk: cmd_alt (recommended for macOS), space, ctrl, shift, alt, or any letter
PTT_KEY=cmd_alt
# Whether pressing PTT should interrupt HALfred's speech
PTT_INTERRUPTS_SPEECH=true

# Optional MCP settings
# MCP_SERVERS_JSON_FILE=MCP_SERVERS.json  # Path to MCP servers config (default: MCP_SERVERS.json)
MCP_CLIENT_TIMEOUT_SECONDS=30  # Timeout for MCP tool calls (seconds)
# MCP_DEMO_FILESYSTEM_DIR=/path/to/demo/dir  # Optional: Enable demo filesystem MCP server

# PTY MCP Safety Settings
# Set to 'true' to require user confirmation for risky shell commands (recommended)
PTY_REQUIRE_APPROVAL=true

# Safe commands whitelist (comma-separated, defaults cover read-only operations)
# Commands not in this list will require user confirmation before execution
PTY_SAFE_COMMANDS=pwd,ls,cd,tree,cat,less,more,head,tail,grep,stat,file,du,df,find,whoami,uname,id

# Desktop Automation MCP Settings (⚠️ EXPERIMENTAL - NOT FULLY TESTED)
# WARNING: These features require additional setup and have known issues.
# See docs/AUTOMATION.md for detailed setup instructions and troubleshooting.
# Requires: automation-mcp, feedback-loop-mcp, and FastMCP patch (see docs/FASTMCP_PATCH.md)
ENABLE_AUTOMATION_MCP=false  # Set to 'true' ONLY after reviewing docs/AUTOMATION.md
ENABLE_FEEDBACK_LOOP_MCP=false  # Set to 'true' ONLY after testing feedback loop
AUTOMATION_MCP_TIMEOUT=600  # Tool call timeout in seconds (default: 600)
FEEDBACK_LOOP_MCP_TIMEOUT=600  # Feedback loop timeout in seconds (default: 600)
PREFERRED_DISPLAY_INDEX=0  # For dual monitors: 0=primary, 1=secondary
AUTOMATION_REQUIRE_APPROVAL=true  # Safety: ALWAYS require confirmation for state-changing actions

# Tracing Settings
OPENAI_AGENTS_DISABLE_TRACING=1  # Set to 1 to disable telemetry/tracing (prevents 503 errors)

# Developer Mode
DEV_MODE=false  # Set to 'true' to enable debug commands (/screeninfo, /screenshot, etc.)